{
	"server": {
		"proxy": "http://localhost:8000/"
	},
	"pug": {
		"src": "./dev/pug/pages/**/*.pug",
		"dest": "./WebSite/templates",
		"watch": "./dev/pug/**/*.pug",
		"plugin": {
			"pretty": "\t",
			"locals": {}
		},
		"rename": {
			"dirname": "",
			"//basename": "",
			"prefix": "",
			"suffix": "",
			"extname": ".html"
		}
	},
	"sass": {
		"src": "./dev/scss/styles.scss",
		"dest": "./WebSite/static/css",
		"watch": "./dev/scss/**/*.scss",
		"plugin": {
			"outputStyle": "compressed",
			"sourceComments": false
		},
		"autoprefixer": {
			"browsers": "last 2 versions",
			"cascade": false
		}
	},
	"scripts": {
		"src": "./dev/js/**/*.js",
		"dest": "./WebSite/static/js",
		"watch": "./dev/js/**/*.js"
	},
	"todo": {
		"src": ["./dev/**/*.*"],
		"dest": "./",
		"plugin": {
			"fileName": "todo.json",
			"reporter": "json",
			"skipUnsupported": true
		}
	}
}
